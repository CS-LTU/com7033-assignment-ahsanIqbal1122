# Stroke Pass Application - Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Stroke Pass
DEBUG=True
FLASK_ENV=development

# =============================================================================
# SECURITY CONFIGURATION (⚠️ REQUIRED - CHANGE IN PRODUCTION!)
# =============================================================================
# Generate a secure secret key with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-secure-random-key-in-production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite Database Path
DATABASE_PATH=./instance/stroke.db

# Kaggle Dataset CSV File
CSV_FILE=./healthcare-dataset-stroke-data.csv

# =============================================================================
# MONGODB CONFIGURATION
# =============================================================================
# MongoDB Connection URI
# Local: mongodb://localhost:27017/
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/
MONGO_URI=mongodb://localhost:27017/

# MongoDB Database Name
MONGO_DB_NAME=stroke_db

# =============================================================================
# SESSION SECURITY
# =============================================================================
# Enable secure cookies (HTTPS only - set to True in production)
SESSION_COOKIE_SECURE=False

# SameSite cookie policy (Strict, Lax, or None)
SESSION_COOKIE_SAMESITE=Lax

# Session lifetime in seconds (default: 3600 = 1 hour)
PERMANENT_SESSION_LIFETIME=3600

# =============================================================================
# CSRF PROTECTION
# =============================================================================
# Enable CSRF protection (should always be True in production)
WTF_CSRF_ENABLED=True

# CSRF token expiration in seconds
WTF_CSRF_TIME_LIMIT=3600

# =============================================================================
# RATE LIMITING
# =============================================================================
# Enable rate limiting to prevent abuse
RATELIMIT_ENABLED=True

# Default rate limit (requests per time period)
# Examples: "100 per hour", "5 per minute", "1000 per day"
RATELIMIT_DEFAULT=100 per hour

# Rate limit storage (memory://, redis://localhost:6379, etc.)
RATELIMIT_STORAGE_URL=memory://

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log directory
LOG_DIR=logs

# =============================================================================
# PASSWORD SECURITY
# =============================================================================
# Password hashing method (scrypt, pbkdf2:sha256, bcrypt)
PASSWORD_HASH_METHOD=scrypt

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
# Maximum file upload size in bytes (16MB default)
MAX_CONTENT_LENGTH=16777216

# =============================================================================
# EMAIL CONFIGURATION (Optional - for future features)
# =============================================================================
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# =============================================================================
# EXTERNAL API KEYS (Optional - for future features)
# =============================================================================
# KAGGLE_USERNAME=your-kaggle-username
# KAGGLE_KEY=your-kaggle-api-key

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Flask Debug Toolbar (set to True for development only)
# DEBUG_TB_ENABLED=False

# SQL Echo (log all SQL queries - development only)
# SQLALCHEMY_ECHO=False
